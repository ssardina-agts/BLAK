    /*** Agent Code ***/
    public void go() {
		postEventAndWait(st.start());	
		for (int i = 0; i < nEpisodes; i++)
		{
            writeLog("EPISODE "+ episode + ":-----------------------------------------");
            if (goalsRemaining() > 0) {
       			postEventAndWait(me.move(recursiveMax));
				postEventAndWait(re.renew());
            } else {
                writeLog("Nothing left to do");
            }
            finishEpisode();
		}
			
}
    
